<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/cardView"
    android:elevation="@dimen/cardview_default_elevation">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_blood_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxEms="10"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/donorName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/myImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:id="@+id/donorContact"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/donorName"
            android:layout_toEndOf="@+id/myImage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/donorContact"
            android:layout_marginTop="8dp"
            android:background="@color/darkRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="A+"
            android:textColor="@color/darkRed"
            android:layout_marginEnd="10dp"
            android:id="@+id/text_blood_type"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>